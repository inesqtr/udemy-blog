<%- include('partials/header'); -%>

<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input class="form-control" id="postTitle" type="text" name="postTitle">
        <label for="postContent">Post</label>
        <textarea class="form-control" id="postContent" name="postContent" rows="5" cols="30"></textarea>        
    </div>
    <button class="btn btn-primary" type="submit" name="submit-button">Publish</button>
</form>

<%- include('partials/footer'); -%>